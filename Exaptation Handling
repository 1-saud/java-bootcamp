        //Q11
        Scanner input = new Scanner(System.in);
        int firstNumber = 0;
        int secondNumber = 0;
        boolean valid = false;

        while (!valid) {
            System.out.print("First number: ");
            try {
                firstNumber = input.nextInt();
                valid = true;
            } catch (InputMismatchException e) {
                System.out.println("enter a valid number!");
            }
        }

        valid = false;
        while (!valid) {
            System.out.print("Enter Second number: ");
            try {
                secondNumber = input.nextInt();
                valid = true;
            } catch (InputMismatchException e) {
                System.out.println("enter a number!");
                input.nextLine();
            }
        }
        System.out.println("a > b: " + (firstNumber > secondNumber));
        System.out.println("a < c: " + (firstNumber < secondNumber));
        System.out.println("a >= d: " + (firstNumber >= secondNumber));
    }
}

        //Q12
     Scanner input = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int number = input.nextInt();

        if (number > 0) {
            System.out.println("Number is positive");
        } else if (number < 0) {
            System.out.println("Number is negative");
        } else {
            System.out.println("Number is zero");
        }

        input.close();
    }
}

        //Q13
        Scanner in = new Scanner(System.in);
        int a = 0, b = 0, c = 0, d = 0;
        boolean ok = false;

        while (!ok) {
            try {
                System.out.println("enter first num");
                a = in.nextInt();

                System.out.println("enter second num");
                b = in.nextInt();

                System.out.println("enter third num");
                c = in.nextInt();

                System.out.println("enter fourth num");
                d = in.nextInt();

                ok = true;
            } catch (InputMismatchException e) {
                System.out.println("write only numbers pls");
                in.nextLine(); // clear input
            }
        }

        System.out.println("sum = " + (a + b + c + d));

        if (a == b && b == c && c == d) {
            System.out.println("numbers are equal");
        } else {
            System.out.println("numbers are not equal");
        }
    }
}

    //    Q14
        Scanner in = new Scanner(System.in);
        int num = 0;
        boolean ok = false;

        while (!ok) {
            System.out.print("enter a number: ");
            try {
                num = in.nextInt();
                ok = true;
            } catch (InputMismatchException e) {
                System.out.println("just write a number");
                in.nextLine();
            }
        }

        if (num > 0) {
            System.out.println("number is positive");
        } else if (num < 0) {
            System.out.println("number is negative");
        } else {
            System.out.println("number is zero");
        }
    }
}


     //   Q15

        Scanner in = new Scanner(System.in);
        int pos = 0;
        int neg = 0;
        int zero = 0;

        System.out.println("enter numbers (type -1 to stop):");

        while (true) {
            try {
                int num = in.nextInt();

                if (num == -1) {
                    break;
                } else if (num > 0) {
                    pos++;
                } else if (num < 0) {
                    neg++;
                } else {
                    zero++;
                }

            } catch (InputMismatchException e) {
                System.out.println("write numbers only pls");
                in.nextLine();
            }
        }

        System.out.println("positive: " + pos);
        System.out.println("negative: " + neg);
        System.out.println("zeros: " + zero);
    }
}


